# kubeopt Website Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=change-me-in-production-use-long-random-string
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///database/kubeopt.db
# For PostgreSQL: postgresql://username:password@localhost/kubeopt
# For MySQL: mysql://username:password@localhost/kubeopt

# Email Configuration (for contact form)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@kubeopt.com

# Admin Configuration
ADMIN_EMAIL=admin@kubeopt.com

# Docker Registry Configuration
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE=kubeopt/aks-optimizer
DOCKER_TAG=latest

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
# Example: GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Security Settings (Production)
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=true

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/kubeopt.log

# External Services (Optional)
REDIS_URL=redis://localhost:6379
SENTRY_DSN=  # For error tracking

# Social Media & External Links
GITHUB_URL=https://github.com/yourusername/kubeopt
TWITTER_URL=https://twitter.com/kubeopt
LINKEDIN_URL=https://linkedin.com/company/kubeopt

# API Configuration
API_RATE_LIMIT=1000 per hour
API_KEY_REQUIRED=false

# Content Configuration
DEMO_DATA_REFRESH_INTERVAL=3600  # seconds
MAX_CONTACT_MESSAGE_LENGTH=5000
ALLOWED_FILE_EXTENSIONS=.png,.jpg,.jpeg,.gif,.pdf

# Cache Configuration
CACHE_TYPE=simple
# For Redis: CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TIMEOUT=300

# Development Settings
SEND_EMAIL_IN_DEV=false
DEBUG_TB_ENABLED=false
TESTING=false

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=0
# SECRET_KEY=your-very-secure-secret-key-here
# SESSION_COOKIE_SECURE=true
# PREFERRED_URL_SCHEME=https